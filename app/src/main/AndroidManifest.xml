<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jordroid.android_cloud_2020">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Parent activity means we will have back button in top of activity and go to the specified activity -->
        <activity android:name=".view.FirstActivity" android:parentActivityName=".view.MainActivity"/>
        <activity android:name=".view.SecondActivity" android:parentActivityName=".view.FirstActivity"/>
        <activity android:name=".view.RecyclerViewActivity" android:parentActivityName=".view.MainActivity"/>
        <activity android:name=".view.ChainConstraintActivity" android:parentActivityName=".view.MainActivity"/>
    </application>

</manifest>